# Polymarket Sports Trading Bot - Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=polymarket-bot
DEBUG=false
SECRET_KEY=your-secret-key-minimum-32-characters-long-change-this

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/polymarket_bot

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server
HOST=0.0.0.0
PORT=8000

# CORS Configuration
# Comma-separated list of allowed origins
# For SportsQuantx.com deployment:
CORS_ALLOWED_ORIGINS=https://SportsQuantx.com,https://www.SportsQuantx.com,http://localhost:5173,http://localhost:3000

# Redis (optional, for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting (requests per minute/hour, burst limit)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST=20

# Discord Alerts
DISCORD_WEBHOOK_URL=

# Slack Alerts (optional)
SLACK_ALERT_WEBHOOK=

# PagerDuty (optional, for critical incident alerts)
PAGERDUTY_ROUTING_KEY=

# OpsGenie (optional, alternative to PagerDuty)
OPSGENIE_API_KEY=

# AWS CloudWatch Logging (optional)
CLOUDWATCH_REGION=us-east-1
CLOUDWATCH_LOG_GROUP=/polymarket-bot/production
